<header class="w-full">
  {% if navigation.items %}
    <nav class="flex flex-col text-center sm:flex-row sm:justify-center sm:items-center w-full border-b border-purple-200 py-4 px-6">
      {% for item in navigation.items %}
        {% set relExternal = '' %}
        {% set isCurrent = '' %}
        {% set isCurrentClass = '' %}

        {% if item.external %}
          {% set relExternal = ' rel="external" target="_blank"' %}
        {% endif %}
        {% if page.url == item.url %}
          {% set isCurrent = ' aria-current="page"' %}
          {% set isCurrentClass = ' currentPage' %}
        {% endif %}
        <a class="whitespace-no-wrap mr-5 no-underline text-xl text-purple-700{{isCurrentClass}}" href="{{ item.url }}"{{ relExternal | safe }}{{ isCurrent | safe }}>
          {{ item.text }}
        </a>
      {% endfor %}
    </nav>
  {% endif %}
</header>
