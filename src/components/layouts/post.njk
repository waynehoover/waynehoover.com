{% extends 'layouts/base.njk' %}

{% block head %}
  {% if config.syntaxTheme %}
    <link rel="preload" as="style" href="/assets/css/{{ config.syntaxTheme }}"/>
    <link rel="stylesheet" href="/assets/css/{{ config.syntaxTheme }}"/>
  {% endif %}
{% endblock %}

{% block content %}
  <main tabindex="-1" class="container mx-auto max-w-3xl">
    {% include "header.njk" %}
    <div class=" pt-5 pb-20 px-4 sm:px-6 lg:pt-10 lg:pb-28 lg:px-8">
      <div class="relative max-w-lg mx-auto lg:max-w-7xl">
    <h1 class="text-4xl">{{ title }}</h1>
    {% if date %}
      <time datetime="{{ date | htmlDate }}">{{ date | dateFilter }}</time>
    {% endif %}
    {% if tags.length %}
      <nav class="flex flex-wrap leading-tight">
        {% for tag in tags %}
          <a class="whitespace-no-wrap mr-10 text-lg" href="/blog/tag/{{tag}}/">#{{tag}}</a>
        {% endfor %}
      </nav>
    {% endif %}
    <article class="pt-10">
      {{ content | safe }}
    </article>

    <div class="mt-10 border-t border-purple-900 px-4 flex items-center justify-between sm:px-0">
      <div class="w-0 flex-1 flex">
        {% if prevPost.url %}
        <a href="{{ prevPost.url }}" class="-mt-px border-t-2 border-transparent pt-4 pr-1 inline-flex items-center text-sm leading-5 font-medium text-purple-500 hover:text-gray-700 hover:border-gray-300 focus:outline-none focus:text-gray-700 focus:border-gray-400 transition ease-in-out duration-150">
          <svg class="mr-3 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
          </svg>
          {{prevPost.data.title}}
        </a>
        {% endif %}
      </div>
      <div class="w-0 flex-1 flex justify-end">
        {% if nextPost.url %}
        <a href="{{ nextPost.url }}" class="-mt-px border-t-2 border-transparent pt-4 pl-1 inline-flex items-center text-sm leading-5 font-medium text-purple-500 hover:text-gray-700 hover:border-gray-300 focus:outline-none focus:text-gray-700 focus:border-gray-400 transition ease-in-out duration-150">
          {{nextPost.data.title}}
          <svg class="ml-3 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
        </a>
        {% endif %}
      </div>
    </div>

    {% include "footer.njk" %}
  </main>
{% endblock %}

