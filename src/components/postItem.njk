{% macro postItem(url, title, date) %}
      <div class="mb-10">
        <h3 class="mt-2 leading-7 font-semibold">
          <a href="{{ url }}" rel="bookmark" class="leading-6 font-semibold transition ease-in-out duration-150">{{ title }}</a>
        </h3>
        <p class="text-sm leading-5 text-gray-500">
          <time datetime="{{ date | htmlDate }}">{{ date | dateFilter }}</time>
        </p>
      </div>
{% endmacro %}
