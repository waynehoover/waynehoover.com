@tailwind preflight
@tailwind components
@tailwind utilities

html,body
  color: #222

a
  color: #555
  &:hover
    color: #000

h1,h2,h3
  & a
    color: #222

.highlight
  padding: 0 10px 5px 10px
  background: rgba(255, 254, 188, 0.45)
  border-radius: 4px

header
  & a.home
    position: absolute
    top: 10px
    right: 10px
    text-decoration: none
    font-size: 1.4rem

.houtline
  text-shadow:  -1px -1px 0 #fff,  1px -1px 0 #fff, -1px 1px 0 #fff, 1px 1px 0 #fff
